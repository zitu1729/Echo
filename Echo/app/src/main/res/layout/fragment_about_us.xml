<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/developerImg"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp"
        android:background="@drawable/joey"
        android:minWidth="0dp"
        android:minHeight="0dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/developerImg"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="80dp"
        android:gravity="center"
        android:text="This app is made by Jitendra prasad mahato as part of
        Internshala's Online Android
Training Project."
        android:textColor="#555555"
        android:textStyle="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="App version: 1.0"
        android:textColor="#555555"
        android:textStyle="normal"/>
</RelativeLayout>